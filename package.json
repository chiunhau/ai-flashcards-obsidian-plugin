  "author": "chiunhau",
  "repository": {
    "type": "git",
    "url": "https://github.com/chiunhau/ai-flashcards-obsidian-plugin.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^16.11.6",
    "builtin-modules": "^3.3.0",
    "esbuild": "^0.27.3",
    "obsidian": "^1.12.2",
    "tslib": "2.4.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@ai-sdk/google": "^3.0.30",
    "ai": "^6.0.97",
    "zod": "^4.3.6"
  }
}
